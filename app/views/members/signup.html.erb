                  </div>
               </div>
               <div class="col-md-6">
                  <div class="register-login">
                     <div class="cool-block">
                        <div class="cool-block-bor">
                        
                           <h3>Registration</h3>

                          <%= form_tag new_member_path,{:method => :post, :class => 'form-horizontal signup-form', :role =>"form"} do %>

                             <div class="form-group">
                               <label for="inputName" class="col-lg-2 control-label">Name</label>
                               <div class="col-lg-10">
                                 <input type="text" value='<%= session[:user_name] %>' class="form-control" name="user_name" id="inputName" placeholder="Name">
                               </div>
                             </div>                           
                             <div class="form-group">
                               <label for="inputEmail1" class="col-lg-2 control-label">Email</label>
                               <div class="col-lg-10">
                                 <input type="email" value='<%= session[:user_email] %>' name="user_email" class="form-control" id="inputEmail1" placeholder="Email">
                               </div>
                             </div>
                             <div class="form-group">
                               <label for="inputPassword1" class="col-md-2 control-label">Password</label>
                               <div class="col-lg-10">
                                 <input type="password" value='<%= session[:user_password] %>' name="user_password" class="form-control" id="inputPassword1" placeholder="Password">
                               </div>
                             </div>
                             <div class="form-group">
                               <label for="inputPassword2" class="col-md-2 control-label">Password</label>
                               <div class="col-lg-10">
                                 <input type="password" value='<%= session[:user_password] %>' class="form-control" id="inputPassword2" placeholder="Confirm Password">
                               </div>
                             </div>
                             <div class="form-group">
                                <label for="inputAddress" class="col-md-2 control-label">Address</label>
                                <div class="col-lg-10">
                                   <textarea class="form-control" value='<%= session[:user_address] %>' name="user_address" rows="3" placeholder="Address"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                              <label for="inputZip" class="col-md-2 control-label">Zipcode</label>
                              <div class="col-lg-10">
                                <input type="text" value='<%= session[:user_zip] %>' name="user_zip" class="form-control" id="inputZip" placeholder="Zip Code">
                              </div>
                            </div>
                            <% if session[:reg_error_message] != '' %>
                              <div class="alert alert-danger">
                                    <b><%= session[:reg_error_message] %> </b>
                              </div>
                              <% session[:reg_error_message] = '' %>                                
                            <% end %>                                       

                             <div class="form-group">
                               <div class="col-lg-offset-2 col-lg-10">
                                 <div class="checkbox">
                                   <label>
                                     <input type="checkbox"> I Agree to the Terms &amp; Conditions
                                   </label>
                                 </div>
                               </div>
                             </div>
                             <div class="form-group">
                               <div class="col-lg-offset-2 col-lg-10">

                                  <%= submit_tag "Register",class: "btn btn-info"%>
                                 <!-- <button type="submit" class="btn btn-info">Register</button> -->
                                 <%= button_tag 'Reset', :type => 'reset' %>
                                <!--  <button type="reset" class="btn btn-default">Reset</button> -->
                               </div>
                             </div>
                          <!--  </form> -->
                           
                          <% end %>
                        </div>
                     </div>   
                  </div>
               </div>
            </div>
            <div class="sep-bor"></div>
         </div>
      </div>

<script>
  $(".signup-form").submit(function(){
    var isFormValid = true;
    
    var password1 = $('#inputPassword1').val();
    var password2 = $('#inputPassword2').val();

    if(password1 != password2)
      isFormValid = false;

    if (!isFormValid) alert("Password must match!");
    return isFormValid;
});
</script>