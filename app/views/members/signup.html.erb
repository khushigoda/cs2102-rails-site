    session[:reg_error] == '0'
  else
    session[:user_email] = ''
    session[:user_password] = ''
    session[:user_name] = ''
    session[:user_address] = ''
    session[:user_zip] = ''
  end
%>

<div class="blocky">
         <div class="container">
            <div class="row">
               <div class="col-md-6">
                  <div class="reg-login-info">
                     <h2>Sign up to access amazing benefits! <span class="color">!!!</span></h2>
